<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:TestingSystem">
    <Style x:Key="BaseButton_1" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="5"/>
        
    </Style>
    


    <Style x:Key="BaseImage" TargetType="Image" >
        <Setter Property="Stretch" Value="Uniform"/>
        <Setter Property="MaxHeight" Value="400"/>
        <Setter Property="MaxWidth" Value="400"/>
        <Setter Property="MinHeight" Value="300"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="BaseTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="Margin" Value="8" />
        <Setter Property="MinWidth" Value="200"/>
       
    </Style>

    <Style x:Key="BasePasswordBox" TargetType="{x:Type PasswordBox}" BasedOn="{StaticResource MaterialDesignPasswordBox}">
        <Setter Property="Margin" Value="8" />
        <Setter Property="MinWidth" Value="200"/>

    </Style>

    <Style x:Key="BaseComboBox" TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignComboBox}">
        <Setter Property="Margin" Value="8" />
        <Setter Property="MinWidth" Value="200"/>

    </Style>


    <Style x:Key="BaseTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="TitleTextBlock" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style x:Key="MultiLineTextBox" TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="AcceptsReturn" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="SpellCheck.IsEnabled" Value="True"/>
        <Setter Property="MinWidth" Value="300"/>
        <Setter Property="FontSize" Value="16" />
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

</ResourceDictionary>